namespace Honeycrisp.Serialized;

// Basic Model schema

struct MeshMetaData
{
    base_index: uint32;
    vertex_count: uint32;
}

table Material
{
    albedo_path: string;
    roughness_path: string;
    ao_path: string;
    normal_path: string;
    specular_path: string;
}

table Model
{
    vertex_attrib_bits: uint16;
    vertex_data: [float];
    indices: [uint32];
    meshes: [MeshMetaData];
    material: Material;
    last_write_time: int64;
}

root_type Model;